    fn can_be_safely_rewrite(rs: &[&Range]) -> Option<Vec<u8>> {
        (rs.len() == 1 && rs[0].start == rs[0].end).then(|| vec![rs[0].start])
    }

    fn reborrow_as_ptr(i: *mut i32) -> Option<*const i32> {
