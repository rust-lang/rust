        "fn": "#fdd687",
        "type": "#ffa0a5",
        "union": "#ffa0a5",
        "keyword": "#39afd7",
        "sidebar": "#53b1db",
        "sidebar_current": "#ffb44c",
        "sidebar_current_background": "transparent",
    },
)
