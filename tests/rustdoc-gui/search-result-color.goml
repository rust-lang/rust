)
assert-css: (
    "//*[@class='desc'][text()='Just a normal struct.']",
    {"color": "#c5c5c5"},
)
assert-css: (
    "//*[@class='result-name']//*[text()='test_docs::']",
    {"color": "#0096cf"},
)

// Checking the color of the bottom border.
assert-css: (
    ".search-results > a",
    {"border-bottom-color": "#aaa3"}
)

