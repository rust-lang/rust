   LL|      1|fn closure_tail() {
   LL|      1|    let _outer = {
   LL|       |        #[coverage(off)]
   LL|       |        || {
   LL|       |            let _middle = {
   LL|       |                || {
   LL|       |                    let _inner = {
   LL|       |                        || {
   LL|       |                            do_stuff();
   LL|       |                        }
   LL|       |                    };
   LL|       |                    do_stuff();
   LL|       |                }
   LL|       |            };
   LL|       |            do_stuff();
   LL|       |        }
   LL|       |    };
   LL|      1|    do_stuff();
   LL|      1|}
   LL|       |
   LL|       |#[coverage(off)]
   LL|       |fn main() {
