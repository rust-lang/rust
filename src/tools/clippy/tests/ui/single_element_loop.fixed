// run-rustfix
// Tests from for_loop.rs that don't have suggestions

#[warn(clippy::single_element_loop)]
fn main() {
    let item1 = 2;
    {
        let item = &item1;
        dbg!(item);
    }

    {
        let item = &item1;
        dbg!(item);
    }

    {
        let item = &(0..5);
        dbg!(item);
    }

    {
        let item = &mut (0..5);
        dbg!(item);
    }

    {
        let item = 0..5;
        dbg!(item);
    }

    {
        let item = 0..5;
        dbg!(item);
    }

    // should not lint (issue #10018)
    for e in [42] {
        if e > 0 {
            continue;
        }
    }

    // should not lint (issue #10018)
    for e in [42] {
        if e > 0 {
            break;
        }
    }

    // should lint (issue #10018)
    {
        let _ = 42;
        let _f = |n: u32| {
            for i in 0..n {
                if i > 10 {
                    dbg!(i);
                    break;
                }
            }
        };
    }
}
