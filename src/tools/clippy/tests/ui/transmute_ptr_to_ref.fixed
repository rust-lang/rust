unsafe fn _ptr_to_ref<T, U>(p: *const T, m: *mut T, o: *const U, om: *mut U) {
    let _: &T = &*p;
    let _: &T = &*p;

    let _: &mut T = &mut *m;
    let _: &mut T = &mut *m;

    let _: &T = &*m;
    let _: &T = &*m;

    let _: &mut T = &mut *(p as *mut T);
    let _ = &mut *(p as *mut T);

    let _: &T = &*(o as *const T);
    let _: &T = &*(o as *const T);

    let _: &mut T = &mut *(om as *mut T);
    let _: &mut T = &mut *(om as *mut T);

    let _: &T = &*(om as *const T);
    let _: &T = &*(om as *const T);
}

