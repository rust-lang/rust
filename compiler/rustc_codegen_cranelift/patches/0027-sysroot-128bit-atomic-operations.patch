index b735957..ea728b6 100644
--- a/library/core/tests/atomic.rs
+++ b/library/core/tests/atomic.rs
@@ -185,10 +185,6 @@ fn atomic_alignment() {
     assert_eq!(align_of::<AtomicU64>(), size_of::<AtomicU64>());
