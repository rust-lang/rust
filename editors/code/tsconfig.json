{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "outDir": "out",
        "lib": [
            "es2019"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF"
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "include": [
        "src",
        "tests"
    ]
}
